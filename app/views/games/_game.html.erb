<main class="container mx-auto px-4 py-8">
  <div class="flex flex-col bg-gray-100 rounded-lg p-4 mb-4">
    <div class="flex justify-between items-center">
      <%= link_to game.name, game_path(game), class: "text-xl font-bold text-blue-500 hover:underline" %>
      <div class="flex">
        <%= button_to "Delete",
                      game_path(game),
                      method: :delete,
                      class: "btn btn--light mr-2 text-red-500 hover:text-red-700" %>
        <%= link_to "Edit",
                    edit_game_path(game),
                    class: "btn btn--light text-green-600 hover:text-gray-800" %>
      </div>
    </div>
  </div>
</main>



