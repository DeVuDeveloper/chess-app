<%= turbo_frame_tag game do %>
  <main class="container mx-auto px-4 py-4">
    <div class="flex flex-col bg-gray-100 rounded-lg">
      <div class="flex justify-between items-center">
        <%= link_to game.id, game_path(game), data: { turbo_frame: "_top" }, class: "text-xl font-bold text-blue-500 hover:underline" %>
        <div class="flex">
          <%= button_to "Delete",
                        game_path(game),
                        method: :delete,
                        class: "btn btn--light mr-2 text-red-500 hover:text-red-700" %>
          <%= link_to "Edit",
                      edit_game_path(game),
                      class: "btn btn--light text-green-600 hover:text-gray-800" %>
        </div>
      </div>
      <p>Game created on <%= game.created_at.strftime("%B %d, %Y %H:%M:%S") %>by<%= %></p>
    </div>
  </main>
<% end %>




