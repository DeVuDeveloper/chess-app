<%= simple_form_for @game, html: { class: "game form" } do |f| %>
  <% if @game.errors.any? %>
    <div class="text-red-500 mb-4">
      <%= @game.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true }, class: "mb-4 p-2 border border-gray-300 rounded-lg focus:outline-none focus:border-blue-500" %>
  <%= f.submit class: "btn btn--secondary py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
<% end %>
