<section class="bg-gray-100 overflow-scroll">
  <header class="bg-white py-6">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl text-center text-gray-800 font-semibold">Create Chess Game</h1>
    </div>
  </header>
 

  <div class="container mx-auto px-4 mt-10">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <%= image_tag "chess.png", alt: "Chess Image", class: "rounded-lg shadow-md" %>
      </div>
        <div class="flex flex-col overflow-auto">
        
        <div class="flex justify-center text-center  ">
          <%= link_to "New Game", new_game_path,  data: { turbo_frame: dom_id(Game.new) }, class: "btn btn--primary w-full py-3 px-6 text-white font-semibold rounded-lg shadow-md bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
        </div>
          <%= turbo_frame_tag Game.new %>

  <%= turbo_frame_tag "games" do %> 
     <%= render @games %>
     <% end %>
      </div>
    </div>
 </div>
</section>

