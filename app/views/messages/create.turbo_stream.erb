<%= turbo_stream.append "#{@message.chat.id}_messages" do %>
  <%= render partial: "messages/message", locals: { message: @message, scroll_to: true } %>
<% end %>

<%= turbo_stream.replace "#{@message.chat.id}_message_form" do %>
  <%= render partial: "messages/form", locals: { chat: @message.chat } %>
<% end %>


