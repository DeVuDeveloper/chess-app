<%= form_with(model: @image, url: images_path, class: 'w-full max-w-sm') do |form| %>
  <div class="mb-4">
    <%= form.label :prompt, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.text_area :prompt, class: 'form-textarea mt-1 block w-full' %>
  </div>

  <div class="mb-4">
    <%= form.label :size, class: 'block text-gray-700 text-sm font-bold mb-2' %>
    <%= form.select :size, options_for_select(['256x256', '512x512', '1024x1024']), {}, class: 'form-select mt-1 block w-full' %>
  </div>

  <div class="flex flex-col items-center justify-between">
    <%= form.submit 'Generate Image',  data: { turbo_frame: dom_id(image) }, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
    <%= link_to "Cancel", messages_path, class: " mt-4 btn btn-size py-1 px-4 bg-red-500 text-white font-semibold rounded-lg shadow-md hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
  </div>
<% end %>
