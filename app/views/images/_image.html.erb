<%= turbo_frame_tag image do %>
  <main class="container mx-auto px-4 py-4">
    <div class="flex flex-col bg-gray-100 rounded-lg">
      <% if image.url.present? %>
        <%= image_tag image.url %>
      <% else %>
        <div class="loader">Image is generating...</div>
      <% end %>

      <div class="flex">
        <% if image.url.present? %>
          <%= button_to "Delete",
                        image_path(image),
                        method: :delete,
                        class: "btn btn--light mr-2 text-red-500 hover:text-red-700" %>
        <% end %>
      </div>
    </div>
  </main>
<% end %>
