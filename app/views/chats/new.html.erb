<h1>Create a new chat</h1>
<%= form_with model: @chat, url: chats_path do |form| %>
  <%= form.submit "Create Chat", class: "btn btn-primary" %>
<% end %>


<%= form_with(model: @chat, url: chats_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :user_id, "User" %>
    <%= form.collection_select :user_id, User.all, :id, :email, {}, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Chat", class: "btn btn-primary" %>
  </div>
<% end %>
